<!DOCTYPE html>
<html lang="es">

<%- include("./partials/head.ejs") %>


<body>
    <header>
        <%- include("./partials/header.ejs") %>
        <%- include("./partials/nav.ejs") %>
    </header>
    <main>
        <div class="grid">
            <div class="left"></div>
            <div class="center">
                <h2>All Blogs
                    <hr>
                </h2>
                <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                <div class="blog">
                    <h3 class="title"><%= blog.title %></h3>
                    <ul>
                        <a href="/post/<%= blog._id %>">
                            <li><%= blog.snippet %></li>
                        </a>
                    </ul>
                </div>

                <% }) %>
                <% } else { %>
                <p>There are no blogs to display...</p>
                <% } %>
            </div>
            <div class="right"></div>
        </div>
    </main>

    <%- include("./partials/footer.ejs") %>

</body>

</html>